[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    migrations
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401
    # Test files can have unused imports and long lines
    test_*.py:F401,E501
    *_test.py:F401,E501
    # main.py has legacy issues
    main.py:E402,F401,F841,W291,C901
    # energy_dashboard.py needs higher complexity for data processing
    backend/app/api/energy_dashboard.py:C901
max-complexity = 10
import-order-style = google
application-import-names = backend,app